<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Estado cuando el botón está presionado -->
        <item android:state_pressed="true">
            <shape>
                <solid android:color="#FEE179"/> <!-- Color cuando se presiona el botón -->
            </shape>
        </item>

        <!-- Estado cuando el botón está deshabilitado -->
        <item android:state_enabled="false">
            <shape>
                <solid android:color="#FEE179"/> <!-- Color cuando el botón está deshabilitado -->
            </shape>
        </item>

        <!-- Estado normal del botón -->
        <item>
            <shape>
                <solid android:color="#FEE179"/> <!-- Color del botón cuando no está presionado -->
            </shape>
        </item>
    </selector>
